        <Heroicons.trash solid />
      </.icon_button>
      <.icon_button to="/" size="lg" link_type="button" color="warning">
        <Heroicons.arrow_up_circle solid />
      </.icon_button>
      <.icon_button
        to="/"
        size="lg"
        link_type="button"
        color="danger"
        tooltip="Here is a really long tooltip"
      >
        <Heroicons.arrow_up_circle solid />
      </.icon_button>
      <.icon_button to="/" size="lg" disabled link_type="button" class="!text-green-600">
        <Heroicons.arrow_down_on_square solid />
      </.icon_button>
      <.icon_button
        to="/"
        size="sm"
        disabled
        loading
        link_type="button"
        class="!text-indigo-600 !dark:text-indigo-300"
