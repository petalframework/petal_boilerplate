        size="xs"
        link_type="button"
        color="primary"
        tooltip="Here is a really long tooltip"
      >
        <Heroicons.clock solid />
      </.icon_button>
      <.icon_button
        to="/"
        size="xs"
        link_type="button"
        color="secondary"
        tooltip="Here is a really long tooltip"
      >
        <Heroicons.clock solid />
      </.icon_button>
      <.icon_button
        to="/"
        size="sm"
        link_type="button"
        color="gray"
        tooltip="Here is a really long tooltip"
      >
        <Heroicons.clock solid />
      </.icon_button>
      <.icon_button to="/" size="md" link_type="button" color="info">
        <Heroicons.trash solid />
      </.icon_button>
      <.icon_button
        to="/"
        size="md"
        link_type="button"
        color="success"
        tooltip="Here is a really long tooltip"
