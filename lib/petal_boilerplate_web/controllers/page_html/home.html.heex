<.container>
  <.h2 underline label="Forms" class="mt-10" />

  <% form =
    Phoenix.Component.to_form(
      %Ecto.Changeset{
        action: :update,
        data: %{name: ""},
        errors: [
          text_with_error: {"can't be blank", [validation: :required]},
