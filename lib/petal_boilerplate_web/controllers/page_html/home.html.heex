<.container>
  <div>
    <.h2 underline label="Links" />
    <.h5 label="Types" />
    <div class="flex flex-wrap gap-2 text-gray-300">
      <.a
        link_type="a"
        to="/"
        class="text-gray-700 dark:text-gray-400 hover:text-gray-900 hover:underline"
        label="Link"
      /> |
      <.a
        method={:put}
        to="/"
        class="text-gray-700 dark:text-gray-400 hover:text-gray-900 hover:underline"
        label="Link with method"
      /> |
      <.a
        link_type="live_patch"
        to="/"
        class="text-gray-700 dark:text-gray-400 hover:text-gray-900 hover:underline"
        label="Live Patch"
      /> |
      <.a
        link_type="live_redirect"
        to="/"
        class="text-gray-700 dark:text-gray-400 hover:text-gray-900 hover:underline"
        label="Live Redirect"
      />
    </div>
  </div>
</.container>

