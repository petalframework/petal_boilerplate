<.container>
  <.h2 underline label="Forms" class="mt-10" />

  <.form let={f} multipart as={:user} for={%Ecto.Changeset{
    action: :update,
    data: %{name: ""},
    errors: [
      text_input_with_error: {"can't be blank", [validation: :required]},
      text_input_with_error: {"must be at least 2 characters", [validation: :minimum]},
      number_input_with_error: {"can't be blank", [validation: :required]},
      email_input_with_error: {"can't be blank", [validation: :required]},
      password_input_with_error: {"can't be blank", [validation: :required]},
      search_input_with_error: {"can't be blank", [validation: :required]},
      telephone_input_with_error: {"can't be blank", [validation: :required]},
      url_input_with_error: {"can't be blank", [validation: :required]},
      time_input_with_error: {"can't be blank", [validation: :required]},
      time_select_with_error: {"can't be blank", [validation: :required]},
      date_select_with_error: {"can't be blank", [validation: :required]},
      date_input_with_error: {"can't be blank", [validation: :required]},
      datetime_select_with_error: {"can't be blank", [validation: :required]},
      datetime_local_input_with_error: {"can't be blank", [validation: :required]},
      color_input_with_error: {"can't be blank", [validation: :required]},
      file_input_with_error: {"can't be blank", [validation: :required]},
      range_input_with_error: {"can't be blank", [validation: :required]},
      textarea_with_error: {"can't be blank", [validation: :required]},
      select_with_error: {"can't be blank", [validation: :required]},
      checkbox_with_error: {"can't be blank", [validation: :required]},
      checkbox_group_with_error: {"can't be blank", [validation: :required]},
      radio_with_error: {"can't be blank", [validation: :required]},
    ]}
  }>

    <!--
      When creating form fields you can do it two ways:

      1. Use `<.form_field>`, which includes the label and error
      2. You can write the input, label and error separately (if you want to style the form differently)

      The following code shows both methods for each form element:
    -->

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:text_input} />
        <.text_input form={f} field={:text_input} placeholder="eg. John" />
        <.form_field_error form={f} field={:text_input} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="text_input"
          form={f}
          field={:text_input_with_error}
          placeholder="Placeholder"
        />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:email_input} />
        <.email_input form={f} field={:email_input} />
        <.form_field_error form={f} field={:email_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="email_input" form={f} field={:email_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:number_input} />
        <.number_input form={f} field={:number_input} placeholder="eg. 1" />
        <.form_field_error form={f} field={:number_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="number_input" form={f} field={:number_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:password_input} />
        <.password_input form={f} field={:password_input} />
        <.form_field_error form={f} field={:password_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="password_input" form={f} field={:password_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:search_input} />
        <.search_input form={f} field={:search_input} />
        <.form_field_error form={f} field={:search_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="search_input" form={f} field={:search_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:telephone_input} />
        <.telephone_input form={f} field={:telephone_input} />
        <.form_field_error form={f} field={:telephone_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="telephone_input" form={f} field={:telephone_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:url_input} />
        <.url_input form={f} field={:url_input} />
        <.form_field_error form={f} field={:url_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="url_input" form={f} field={:url_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:time_input} />
        <.time_input form={f} field={:time_input} />
        <.form_field_error form={f} field={:time_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="time_input" form={f} field={:time_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:time_select} />
        <.time_select form={f} field={:time_select} />
        <.form_field_error form={f} field={:time_select} class="mt-1" />
      </div>

      <div>
        <.form_field type="time_select" form={f} field={:time_select_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:date_input} />
        <.date_input form={f} field={:date_input} />
        <.form_field_error form={f} field={:date_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="date_input" form={f} field={:date_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:date_select} />
        <.date_select form={f} field={:date_select} />
        <.form_field_error form={f} field={:date_select} class="mt-1" />
      </div>

      <div>
        <.form_field type="date_select" form={f} field={:date_select_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:datetime_local_input} />
        <.datetime_local_input form={f} field={:datetime_local_input} />
        <.form_field_error form={f} field={:datetime_local_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="datetime_local_input" form={f} field={:datetime_local_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:datetime_select} />
        <.datetime_select form={f} field={:datetime_select} />
        <.form_field_error form={f} field={:datetime_select} class="mt-1" />
      </div>

      <div>
        <.form_field type="datetime_select" form={f} field={:datetime_select_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:color_input} />
        <.color_input form={f} field={:color_input} />
        <.form_field_error form={f} field={:color_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="color_input" form={f} field={:color_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:file_input} />
        <.file_input form={f} field={:file_input} />
        <.form_field_error form={f} field={:file_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="file_input" form={f} field={:file_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:range_input} />
        <.range_input form={f} field={:range_input} />
        <.form_field_error form={f} field={:range_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="range_input" form={f} field={:range_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:textarea} />
        <.textarea form={f} field={:textarea} />
        <.form_field_error form={f} field={:textarea} class="mt-1" />
      </div>

      <div>
        <.form_field type="textarea" form={f} field={:textarea_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:select} />
        <.select
          options={["Admin": "admin", "User": "user"]}
          form={f}
          field={:select}
        />
        <.form_field_error form={f} field={:select} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="select"
          options={["Admin": "admin", "User": "user"]}
          form={f}
          field={:select_with_error}
        />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <label class="inline-flex items-center gap-3 mb-6 text-sm text-gray-900 dark:text-gray-200">
          <.checkbox form={f} field={:checkbox} />
          <div>I accept</div>
        </label>

        <.form_field_error form={f} field={:checkbox} class="mt-1" />
      </div>

      <div>
        <.form_field type="checkbox" form={f} field={:checkbox_with_error} label="I accept (with error)" />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_field
          type="checkbox_group"
          form={f}
          field={:checkbox_group}
          options={[
            {"Option 1", "option_1"},
            {"Option 2", "option_2"},
            {"Option 3", "option_3"},
            {"Option 4", "option_4"}
          ]}
        />
      </div>
      <div>
        <.form_field
          type="checkbox_group"
          form={f}
          field={:checkbox_group_with_error}
          options={[
            {"Option 1", "option_1"},
            {"Option 2", "option_2"},
            {"Option 3", "option_3"},
            {"Option 4", "option_4"}
          ]}
        />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:radio} />

        <div class="flex flex-col gap-1">
          <label class="inline-flex items-center gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="option_1" />
            <div>Option 1</div>
          </label>

          <label class="inline-flex items-center gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="option_2" />
            <div>Option 2</div>
          </label>

          <label class="inline-flex items-center gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="option_3" />
            <div>Option 3</div>
          </label>
        </div>

        <.form_field_error form={f} field={:radio} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="radio_group"
          form={f}
          field={:radio_with_error}
          options={[
            "Option 1": "option_1",
            "Option 2": "option_2",
            "Option 3": "option_3"
          ]}
        />
      </div>
