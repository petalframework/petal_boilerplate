<.container class="mt-10 ">
  <.h1>Petal Components</.h1>
  <.link to="/live" class="underline">View Live View JS components</.link>
</.container>

<.container class="mt-10">
  <.h2 underline label="Containers" />
</.container>

<.container max_width="full" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "full"
</.container>

<.container max_width="lg" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "lg"
</.container>

<.container max_width="md" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "md"
</.container>

<.container max_width="sm" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "sm"
</.container>

<.container>
  <div>
    <.h2 underline label="Links" />
    <.h5 label="Types" />
    <div class="flex flex-wrap gap-2 text-gray-300">
      <.link link_type="a" to="/" class="text-gray-700 hover:text-gray-900 hover:underline" label="Link" /> |
      <.link method={:put} to="/" class="text-gray-700 hover:text-gray-900 hover:underline" label="Link with method" /> |
      <.link link_type="live_patch" to="/" class="text-gray-700 hover:text-gray-900 hover:underline" label="Live Patch" /> |
      <.link link_type="live_redirect" to="/" class="text-gray-700 hover:text-gray-900 hover:underline" label="Live Redirect" />
    </div>
  </div>
</.container>

<.container class="mt-10">
  <div>
    <.h2 underline label="Buttons" />
    <.h5 label="Types" />
    <div class="flex flex-wrap gap-2">
      <.button label="Button" to="/" />
      <.button link_type="a" to="/" label="Link" />
      <.button link_type="a" to="/" label="Link with method" method={:delete} />
      <.button link_type="live_patch" to="/" label="Live Patch" />
      <.button link_type="live_redirect" to="/" label="Live Redirect" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="Colors" />
    <div class="flex flex-wrap gap-2">
      <.button color="primary" label="Primary" />
      <.button color="secondary" label="secondary" />
      <.button color="white" label="White" />
      <.button color="success" label="Success" />
      <.button color="danger" label="Danger" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="Colors (outline)" />
    <div class="flex flex-wrap gap-2">
      <.button color="primary" label="Primary" variant="outline" />
      <.button color="secondary" label="Secondary" variant="outline" />
      <.button color="white" label="White" variant="outline" />
      <.button color="success" label="Success" variant="outline" />
      <.button color="danger" label="Danger" variant="outline" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="Shadow" />
    <div class="flex flex-wrap gap-2">
      <.button color="primary" label="Primary" variant="shadow" />
      <.button color="secondary" label="Secondary" variant="shadow" />
      <.button color="white" label="White" variant="shadow" />
      <.button color="success" label="Success" variant="shadow" />
      <.button color="danger" label="Danger" variant="shadow" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="Sizes" />
    <div class="flex flex-wrap items-end gap-2">
      <.button size="xs" label="xs" />
      <.button size="sm" label="sm" />
      <.button size="md" label="md" />
      <.button size="lg" label="lg" />
      <.button size="xl" label="xl" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="States" />
    <div class="mt-5">
      <.form_label label="Disabled" />
    </div>
    <div class="flex flex-wrap items-end gap-2 mt-2">
      <.button disabled size="xs" to="/" label="Disabled xs" />
      <.button disabled size="sm" to="/" label="Disabled sm" />
      <.button disabled size="md" to="/" label="Disabled md" />
      <.button disabled size="lg" to="/" label="Disabled lg" />
      <.button disabled size="xl" to="/" label="Disabled xl" />
    </div>
    <div class="mt-5">
      <.form_label label="Loading" />
    </div>
    <div class="flex flex-wrap items-end gap-2 mt-2">
      <.button loading size="xs" label="Loading xs" />
      <.button loading size="sm" label="Loading sm" />
      <.button loading size="md" label="Loading md" />
      <.button loading size="lg" label="Loading lg" />
      <.button loading size="xl" label="Loading xl" />
    </div>
  </div>

  <div class="mt-10">
    <.h5 label="Button with icon" />
    <div class="flex flex-wrap items-end gap-2">
      <.button icon link_type="a" to="/">
        <Heroicons.Solid.home class="w-5 h-5" />
        With icon
      </.button>
    </div>
  </div>
</.container>

<.container class="mt-10">
  <.h2 underline label="Typography" />
  <.h1>Heading 1</.h1>
  <.h2>Heading 2</.h2>
  <.h3>Heading 3</.h3>
  <.h4>Heading 4</.h4>
