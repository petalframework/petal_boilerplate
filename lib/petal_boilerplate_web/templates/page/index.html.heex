<.container class="mt-10">
  <.h2 underline label="Breadcrumbs" />

  <.h5 label="Slash" />
  <.breadcrumbs links={[
    %{ label: "Link 1", to: "#" },
    %{ label: "Link 2", to: "#" },
    %{ label: "Link 3", to: "#" }
